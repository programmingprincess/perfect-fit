{
  "background": {
      "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/hoodie.png",
    "default_title": "Perfect Fit",
    "default_popup": "display_sizes.html"
  },
  "description": "Finds the perfect fit for you on every website!",
  "manifest_version": 2,
  "name": "PerfectFit",
  "version": "1.0",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/borderify",
  "icons": {
    "48": "icons/hoodie.png"
  },
  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },          
  "permissions": 
    ["tabs",
     "storage"],
  "background": {
    "scripts": ["CurrentWebsite.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["CurrentWebsite.js"]
    }
  ],
  "applications": {
      "gecko": {
          "id": "perfect-fit-storage@mozilla.org"
      }
  }                                                   
}
