{
  "browser_action": {
    "default_icon": "icons/hoodie.png",
    "default_title": "Perfect Fit",
    "default_popup": "perfect-fit.html"
  },
  "description": "Finds the perfect fit for you on every website!",
  "manifest_version": 2,
  "name": "PerfectFit",
  "version": "1.0",
  "homepage_url": "https://github.com/programmingprincess/perfect-fit",
  "icons": {
    "48": "icons/hoodie.png"
  },
  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },          
  "permissions": 
    ["tabs",
     "storage"],
  "applications": {
      "gecko": {
          "id": "perfect-fit@mozilla.org"
      }
  }                                                   
}
